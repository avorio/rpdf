SubDir TOP ocr-tesseract ;
ImportDir TOP colib ;
ImportDir TOP imgio ;
ImportDir TOP imglib ;
ImportDir TOP ocr-utils ;
ImportDir TOP ocr-layout-rast ;

if $(notesseract) = "" {
    AddDynamicLib tesseract_full ;
    if $(disable_libtiff) = "" {
        AddDynamicLib tiff ;
    }

    AddC++Flags tesseract : -I$(TESSHEADERS) ;
    Lib libtesseract : tesseract.cc recognized-page.cc ;
}
# Exe test-tesseract ;
# Exe tess ;
