SubDir TOP langmods ;
ImportDir TOP colib ;
ImportDir TOP imgio ;
ImportDir TOP imglib ;
ImportDir TOP ocr-utils ;

if $(noaspell) = "" {
    if $(aspell_dir) != "" {
        C++FLAGS += -I$(aspell_dir)/interfaces/cc ;
        LINKLIBS += -L$(aspell_dir)/.libs -Wl,-rpath -Wl,$(aspell_dir)/.libs ;
    }
    AddDynamicLib aspell ;
}
if $(nofst) = "" {
    AddDynamicLib fst ;
    AddDynamicLib pthread ;
}

C++Flags += -Wno-sign-compare ;

if $(noaspell) {
    LibraryFromCustomObject liblangmods : 
                            langmod-aspell$(SUFOBJ) :
                            langmod-aspell-stub.cc ;
} else { 
    Library liblangmods : langmod-aspell.cc ; 
}

if $(nofst) = "" {
    Library liblangmods : fstbuilder.cc fstutil.cc
                          fstmodels.cc ; 
}

Lib liblangmods :
    lattice.cc
    beam-search.cc
    langmod-dict.cc
    langmod-shortest-path.cc
;

# UnitTest test-spell ;
